<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/spares_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_30dp"
                android:background="@color/app_text"
                android:gravity="center"
                android:text="@string/lbl_select_spares"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/app_background"
                app:bg_color="2"
                app:bg_type="color_bg"
                app:lbl_text="lbl_select_spares"
                app:text_color="1" />

            <app.com.arresto.arresto_connect.custom_views.MultiSpinner
                android:id="@+id/spares_spnr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/spinner_bg"
                android:minHeight="@dimen/margin_35dp"
                android:spinnerMode="dialog" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_30dp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:background="@color/app_text"
                android:gravity="center"
                android:text="@string/lbl_edit_spares"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/app_background"
                app:bg_color="2"
                app:bg_type="color_bg"
                app:lbl_text="lbl_edit_spares"
                app:text_color="1" />

            <LinearLayout
                android:id="@+id/spares_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:id="@+id/continue_btn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/margin_40dp"
            android:layout_marginTop="@dimen/margin_30dp"
            android:layout_marginRight="@dimen/margin_40dp"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:background="@color/app_text"
            android:gravity="center"
            android:text="@string/lbl_cntnue_st"
            android:textColor="#f7f7f7"
            android:textSize="@dimen/textsize"
            app:lbl_text="lbl_cntnue_st" />
    </LinearLayout>
</ScrollView>