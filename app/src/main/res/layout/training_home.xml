<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin_20dp">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/detail_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:alignmentMode="alignMargins"
        app:columnCount="2"
        app:columnOrderPreserved="false"
        app:rowCount="2">

        <app.com.arresto.arresto_connect.custom_views.My_RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/kt_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/round_bg"
            android:orientation="vertical"
            app:bg_color="4"
            app:bg_type="round_bg"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="3dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_kt" />

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/img1"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_marginBottom="3dp"
                android:background="@color/white"
                android:gravity="center"
                android:inputType="textCapCharacters"
                android:maxLines="2"
                android:padding="2dp"
                android:text="@string/lbl_knowledge_tree"
                android:textSize="15dp"
                app:bg_color="1"
                app:bg_type="color_bg"
                app:textAllCaps="true"
                app:text_color="2" />
        </app.com.arresto.arresto_connect.custom_views.My_RelativeLayout>

        <app.com.arresto.arresto_connect.custom_views.My_RelativeLayout
            android:id="@+id/webinar_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/round_bg"
            android:orientation="vertical"
            app:bg_color="4"
            app:bg_type="round_bg"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="3dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_video" />

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/img2"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_marginBottom="3dp"
                android:background="@color/white"
                android:gravity="center"
                android:maxLines="2"
                android:padding="2dp"
                android:text="@string/lbl_create_webinar"
                app:lbl_text="lbl_create_webinar"
                android:textColor="@color/app_text"
                android:textSize="15dp"
                app:bg_color="1"
                app:bg_type="color_bg"
                app:text_color="2" />
        </app.com.arresto.arresto_connect.custom_views.My_RelativeLayout>

        <app.com.arresto.arresto_connect.custom_views.My_RelativeLayout
            android:id="@+id/learn_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/round_bg"
            android:orientation="vertical"
            app:bg_color="4"
            app:bg_type="round_bg"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="3dp"
                android:adjustViewBounds="true"
                android:padding="@dimen/margin_30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_elerning" />

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/img3"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_marginBottom="3dp"
                android:background="@color/white"
                android:gravity="center"
                android:maxLines="2"
                android:padding="2dp"
                android:text="@string/lbl_e_learning"
                app:lbl_text="lbl_e_learning"
                android:textColor="@color/app_text"
                android:textSize="15dp"
                app:bg_color="1"
                app:bg_type="color_bg"
                app:text_color="2" />
        </app.com.arresto.arresto_connect.custom_views.My_RelativeLayout>

        <app.com.arresto.arresto_connect.custom_views.My_RelativeLayout
            android:id="@+id/activity_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/round_bg"
            android:orientation="vertical"
            app:bg_color="4"
            app:bg_type="round_bg"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:id="@+id/img4"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="3dp"
                android:adjustViewBounds="true"
                android:padding="@dimen/margin_30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_activity" />

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/img4"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_marginBottom="3dp"
                android:background="@color/white"
                android:gravity="center"
                android:maxLines="2"
                android:padding="2dp"
                android:text="@string/lbl_activity"
                app:lbl_text="lbl_activity"
                android:textColor="@color/app_text"
                android:textSize="15dp"
                app:bg_color="1"
                app:bg_type="color_bg"
                app:text_color="2" />
        </app.com.arresto.arresto_connect.custom_views.My_RelativeLayout>
    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>