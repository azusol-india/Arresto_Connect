<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:id="@+id/slct_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/lbl_select_form"
            android:gravity="center"
            android:textColor="@color/app_background"
            android:background="@color/app_text"
            app:bg_color="2"
            app:lbl_text="lbl_select_form"
            app:bg_type="color_bg"
            app:text_color="1" />

        <Spinner
            android:id="@+id/form_spinr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"
            android:background="@drawable/spinner_bg"
            android:minHeight="@dimen/margin_30dp"
            android:spinnerMode="dropdown">

        </Spinner>

        <LinearLayout
            android:id="@+id/dynamic_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical" />

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:id="@+id/continue_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_30dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_10dp"
            android:layout_weight="1"
            android:background="@drawable/round_bg"
            android:gravity="center"
            android:text="@string/lbl_cntnue_st"
            app:bg_color="2"
            app:bg_type="round_bg"
            app:lbl_text="lbl_cntnue_st"
            app:text_color="1" />
    </LinearLayout>

</ScrollView>