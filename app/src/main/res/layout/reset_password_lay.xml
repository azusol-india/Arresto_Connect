<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/margin_40dp"
            android:background="@drawable/left_round"
            android:backgroundTint="@color/black"
            android:gravity="center"
            android:padding="@dimen/margin_3dp"
            android:rotation="180"
            android:src="@drawable/arrow_right"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/logo_img1"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo" />

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/lbl_reset_txt"
            android:textAllCaps="true"
            android:textColor="@color/button_bg"
            android:textSize="@dimen/margin_14dp"
            app:lbl_text="lbl_reset_txt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:gravity="bottom"
                android:textColorHint="@color/hint_color">

                <app.com.arresto.arresto_connect.custom_views.My_EditText
                    android:id="@+id/otp_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btm_line"
                    android:hint="Enter OTP"
                    android:inputType="number"
                    android:minHeight="30dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/textsize" />
                <!--                    app:bg_color="4"-->
                <!--                    app:bg_type="bottom_line_bg"-->
                <!--                    app:text_color="2"-->
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:gravity="bottom"
                android:textColorHint="@color/hint_color">

                <app.com.arresto.arresto_connect.custom_views.My_EditText
                    android:id="@+id/newpass_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btm_line"
                    android:hint="@string/lbl_new_password"
                    android:inputType="textPassword"
                    android:minHeight="30dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/textsize"
                    app:lbl_text="lbl_new_password" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:gravity="bottom"
                android:textColorHint="@color/hint_color">

                <app.com.arresto.arresto_connect.custom_views.My_EditText
                    android:id="@+id/cnf_pass_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btm_line"
                    android:hint="@string/lbl_confirm_new_password"
                    android:inputType="textPassword"
                    android:minHeight="30dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/textsize"
                    app:lbl_text="lbl_confirm_new_password" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <app.com.arresto.arresto_connect.custom_views.MyButton
            android:id="@+id/reset_btn"
            style="@style/material_button"
            android:layout_width="256dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="@string/lbl_reset_txt"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="@dimen/textsize"
            app:backgroundTint="@color/grey"
            app:cornerRadius="@dimen/margin_10dp"
            app:lbl_text="lbl_reset_txt" />

    </LinearLayout>
</RelativeLayout>