<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <app.com.arresto.arresto_connect.custom_views.My_RelativeLayout
        android:id="@+id/main_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        android:background="@drawable/edittext_bg"
        app:bg_color="2"
        app:bg_type="border_bg"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
       >

        <ImageView
            android:id="@+id/indicator"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_2dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:src="@drawable/circle_shape"
            app:tint="@color/quantum_grey" />

        <ImageView
            android:id="@+id/btn_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/inspection_hist" />

        <!--<ImageView
            android:id="@+id/btn_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/sensor_ic" />-->

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_icon"
            android:layout_centerVertical="true"
            android:background="@color/app_text"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/app_background"
            app:bg_color="2"
            app:bg_type="color_bg" />

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_icon"
            android:layout_centerVertical="true"
            android:background="@color/app_text"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/lbl_sensor"
            android:textColor="@color/app_background"
            app:bg_color="2"
            app:bg_type="color_bg"
            app:lbl_text="lbl_sensor"
            app:text_color="1" />

    </app.com.arresto.arresto_connect.custom_views.My_RelativeLayout>
</LinearLayout>
