<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/margin_5dp"
    android:layout_height="wrap_content">

    <app.com.arresto.arresto_connect.custom_views.My_LinearLayout
        android:id="@+id/prnt_layr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:orientation="vertical"
        app:bg_color="2"
        app:bg_type="border_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:id="@+id/asst_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:background="@color/app_text"
                android:gravity="center_horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_14dp"
                app:bg_color="2"
                app:bg_type="color_bg"
                app:text_color="1" />

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:id="@+id/desc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.7"
                android:background="@color/app_text"
                android:gravity="center_horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="@string/lbl_ast_des_st"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_14dp"
                app:bg_color="2"
                app:bg_type="color_bg"
                app:lbl_text="lbl_ast_des_st"
                app:text_color="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:layout_weight="1.3">

                <ImageView
                    android:id="@+id/ast_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:padding="3dp" />

                <app.com.arresto.arresto_connect.custom_views.My_TextView
                    android:id="@+id/uin_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ast_image"
                    android:gravity="center_horizontal"
                    android:paddingTop="3dp"
                    android:paddingBottom="0dp"
                    android:text="@string/lbl_uin"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/margin_14dp"
                    app:bg_color="0"
                    app:bg_type="color_bg"
                    app:text_color="2" />

                <app.com.arresto.arresto_connect.custom_views.My_LinearLayout
                    android:id="@+id/indicator_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:bg_color="1"
                    app:bg_type="color_bg">

                    <ImageView
                        android:id="@+id/indictr_img"
                        android:layout_width="50dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/light_green" />

                    <app.com.arresto.arresto_connect.custom_views.My_TextView
                        android:id="@+id/status_tv"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="12.5sp"
                        app:bg_color="0"
                        app:bg_type="color_bg"
                        app:text_color="2" />
                </app.com.arresto.arresto_connect.custom_views.My_LinearLayout>

            </RelativeLayout>

            <View
                android:id="@+id/line"
                android:layout_width="0.7dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:background="@color/app_text" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/margin_5dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <app.com.arresto.arresto_connect.custom_views.My_TextView
                    android:id="@+id/dscrptn_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/margin_14dp"
                    app:bg_color="0"
                    app:bg_type="color_bg"
                    app:text_color="2" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <app.com.arresto.arresto_connect.custom_views.My_LinearLayout
                android:id="@+id/view_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp"
                app:bg_color="2"
                app:bg_type="color_bg">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    android:src="@drawable/view_detail"
                    android:tint="@color/button_bg" />

                <app.com.arresto.arresto_connect.custom_views.My_TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/lbl_asset_details"
                    android:textColor="@color/app_text"
                    android:textSize="12.5sp"
                    app:bg_color="2"
                    app:bg_type="color_bg"
                    app:lbl_text="lbl_asset_details"
                    app:text_color="1" />
            </app.com.arresto.arresto_connect.custom_views.My_LinearLayout>

            <app.com.arresto.arresto_connect.custom_views.My_LinearLayout
                android:id="@+id/view_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp"
                app:bg_color="2"
                app:bg_type="color_bg">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/history_ic"
                    android:tint="@color/button_bg" />

                <app.com.arresto.arresto_connect.custom_views.My_TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/lbl_view_detail_st"
                    android:textColor="@color/app_text"
                    android:textSize="12.5sp"
                    app:bg_color="2"
                    app:bg_type="color_bg"
                    app:lbl_text="lbl_view_detail_st"
                    app:text_color="1" />
            </app.com.arresto.arresto_connect.custom_views.My_LinearLayout>

            <app.com.arresto.arresto_connect.custom_views.My_LinearLayout
                android:id="@+id/check_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp"
                app:bg_color="2"
                app:bg_type="color_bg">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:src="@drawable/check_in"
                    android:tint="@color/button_bg" />

                <app.com.arresto.arresto_connect.custom_views.My_TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/lbl_checkin_st"
                    android:textColor="@color/app_text"
                    android:textSize="12.5sp"
                    app:bg_color="2"
                    app:bg_type="color_bg"
                    app:lbl_text="lbl_checkin_st"
                    app:text_color="1" />
            </app.com.arresto.arresto_connect.custom_views.My_LinearLayout>
        </LinearLayout>

        <app.com.arresto.arresto_connect.custom_views.My_LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5dp"
            android:background="@color/app_text"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="3"
            app:bg_color="2"
            app:bg_type="color_bg">

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:id="@+id/ttl_life_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="Life Time:\n 0 Hour"
                android:textColor="@color/app_background"
                android:textSize="@dimen/margin_13dp"
                app:bg_color="2"
                app:bg_type="color_bg"
                app:text_color="1" />

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:id="@+id/used_hr_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/sepratr"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/lbl_used"
                android:textColor="@color/app_background"
                android:textSize="@dimen/margin_13dp"
                app:bg_color="2"
                app:lbl_text="lbl_used"
                app:bg_type="color_bg"
                app:text_color="1" />

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:id="@+id/remn_hr_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/lbl_balance"
                android:textColor="@color/app_background"
                android:textSize="@dimen/margin_13dp"
                app:bg_color="2"
                app:lbl_text="lbl_balance"
                app:bg_type="color_bg"
                app:text_color="1" />
        </app.com.arresto.arresto_connect.custom_views.My_LinearLayout>
    </app.com.arresto.arresto_connect.custom_views.My_LinearLayout>

    <RelativeLayout
        android:id="@+id/gray_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90919191"
        android:layout_alignBottom="@+id/prnt_layr"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/select_btn"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:button="@drawable/custom_checkbox"
            android:checked="true" />
    </RelativeLayout>
</FrameLayout>
