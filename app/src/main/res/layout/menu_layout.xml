<app.com.arresto.arresto_connect.custom_views.My_LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_text"
    android:orientation="vertical"
    app:bg_color="2"
    app:bg_type="color_bg">

    <app.com.arresto.arresto_connect.custom_views.My_LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:background="@color/app_background"
        android:gravity="center"
        android:orientation="horizontal"
        app:bg_color="1"
        app:bg_type="color_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="30dp"
                android:onClick="onClick"
                android:scaleType="centerCrop"
                android:elevation="0dp"
                android:layout_gravity="center_vertical"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="22dp">

                <ImageView
                    android:id="@+id/profil_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_pic"
                    android:visibility="visible" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo_img"
                android:layout_width="@dimen/margin_80dp"
                android:layout_height="@dimen/margin_50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/logo"
                android:visibility="gone" />

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:id="@+id/usr_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="1dp"
                android:textStyle="bold"
                android:textColor="@color/button_bg"
                android:textSize="15dp"
                app:bg_color="0"
                app:bg_type="trans_bg"
                app:lbl_text="lbl_welcm_txt"
                app:text_color="2" />

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:id="@+id/email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="1dp"
                android:textColor="@color/button_bg"
                android:textSize="@dimen/margin_12dp"
                app:bg_color="0"
                app:bg_type="trans_bg"
                app:lbl_text="lbl_welcm_txt"
                app:text_color="2" />

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:id="@+id/user_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="1dp"
                android:text="@string/lbl_welcm_txt"
                android:textColor="@color/button_bg"
                android:textSize="@dimen/margin_12dp"
                app:bg_color="0"
                app:bg_type="trans_bg"
                app:lbl_text="lbl_welcm_txt"
                app:text_color="2" />


        </LinearLayout>
    </app.com.arresto.arresto_connect.custom_views.My_LinearLayout>

    <ExpandableListView
        android:id="@+id/navigationmenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:childDivider="@color/white"
        android:divider="@color/white"
        android:dividerHeight="0.7dp"
        android:groupIndicator="@null"/>
</app.com.arresto.arresto_connect.custom_views.My_LinearLayout>
