<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:orientation="vertical">

    <app.com.arresto.arresto_connect.custom_views.My_TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="5dp"
        android:background="@color/button_bg"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/lbl_segment_1"
        android:textColor="@color/app_text"
        android:textSize="@dimen/textsize"
        app:bg_color="4"
        app:bg_type="trans_bg"
        app:lbl_text="lbl_segment_1"
        app:text_color="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_10dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/indicator_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:src="@drawable/light_red" />

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:id="@+id/status_tv"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/indictr_img"
                android:layout_margin="5dp"
                android:background="@color/transparent"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/lbl_ok_st"
                android:textColor="@color/app_text"
                android:textSize="@dimen/text_size_10sp"
                app:bg_color="0"
                app:bg_type="color_bg"
                app:text_color="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <app.com.arresto.arresto_connect.custom_views.My_TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btm_line"
                    android:gravity="bottom"
                    android:text="@string/lbl_deflection"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/textsize"
                    app:bg_color="2"
                    app:bg_type="bottom_line_bg"
                    app:lbl_text="lbl_deflection"
                    app:text_color="2" />


                <app.com.arresto.arresto_connect.custom_views.My_TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@drawable/bg_btm_line"
                    android:gravity="bottom"
                    android:text="@string/lbl_tension"
                    app:lbl_text="lbl_tension"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/textsize"
                    app:bg_color="2"
                    app:bg_type="bottom_line_bg"
                    app:text_color="2" />


                <app.com.arresto.arresto_connect.custom_views.My_TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@drawable/bg_btm_line"
                    android:gravity="bottom"
                    android:text="@string/lbl_angle"
                    app:lbl_text="lbl_angle"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/textsize"
                    app:bg_color="2"
                    app:bg_type="bottom_line_bg"
                    app:text_color="2" />

                <app.com.arresto.arresto_connect.custom_views.My_TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@drawable/bg_btm_line"
                    android:gravity="bottom"
                    android:text="@string/lbl_cusp_sag"
                    app:lbl_text="lbl_cusp_sag"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/textsize"
                    app:bg_color="2"
                    app:bg_type="bottom_line_bg"
                    app:text_color="2" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <app.com.arresto.arresto_connect.custom_views.My_TextView
                    android:id="@+id/deflection_tv"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@drawable/bg_btm_line"
                    android:gravity="bottom"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/app_text"
                    android:textColorHint="@color/app_text"
                    android:textSize="@dimen/textsize"
                    app:bg_color="2"
                    app:bg_type="bottom_line_bg"
                    app:text_color="2" />

                <app.com.arresto.arresto_connect.custom_views.My_TextView
                    android:id="@+id/tention_tv"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@drawable/bg_btm_line"
                    android:gravity="bottom"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/app_text"
                    android:textColorHint="@color/app_text"
                    android:textSize="@dimen/textsize"
                    app:bg_color="2"
                    app:bg_type="bottom_line_bg"
                    app:text_color="2" />

                <app.com.arresto.arresto_connect.custom_views.My_TextView
                    android:id="@+id/angle_tv"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@drawable/bg_btm_line"
                    android:gravity="bottom"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/app_text"
                    android:textColorHint="@color/app_text"
                    android:textSize="@dimen/textsize"
                    app:bg_color="2"
                    app:bg_type="bottom_line_bg"
                    app:text_color="2" />

                <app.com.arresto.arresto_connect.custom_views.My_TextView
                    android:id="@+id/sc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@drawable/bg_btm_line"
                    android:gravity="bottom"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/app_text"
                    android:textColorHint="@color/app_text"
                    android:textSize="@dimen/textsize"
                    app:bg_color="2"
                    app:bg_type="bottom_line_bg"
                    app:text_color="2" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>