<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/margin_20dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <app.com.arresto.arresto_connect.custom_views.My_RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:background="@drawable/bg_btm_line"
            app:bg_color="2"
            app:bg_type="bottom_line_bg"
            app:text_color="2">

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_35dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/button_bg"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="@dimen/margin_30dp"
                android:layout_height="@dimen/margin_30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:padding="7dp"
                android:src="@drawable/cancel"
                app:tint="@color/button_bg" />

        </app.com.arresto.arresto_connect.custom_views.My_RelativeLayout>


        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="@string/lbl_status"
            app:lbl_text="lbl_status" />

        <app.com.arresto.arresto_connect.custom_views.DialogSpinner
            android:id="@+id/status_spnr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_5dp"
            android:background="@drawable/spinner_bg"
            android:minHeight="@dimen/margin_35dp"
            android:spinnerMode="dialog" />

        <LinearLayout
            android:id="@+id/remark_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_5dp"
            android:visibility="gone">

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                android:text="@string/lbl_remark_st"
                app:lbl_text="lbl_remark_st" />

            <EditText
                android:id="@+id/remark_edt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@drawable/edittext_bg1"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/margin_8dp"
                android:singleLine="true"
                android:textSize="@dimen/margin_15dp" />
        </LinearLayout>


        <app.com.arresto.arresto_connect.custom_views.MyButton
            android:id="@+id/save_btn"
            style="@style/material_button"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_10dp"
            android:minHeight="@dimen/margin_30dp"
            android:text="@string/lbl_sbmit_st"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@color/button_bg"
            app:cornerRadius="@dimen/margin_10dp"
            app:lbl_text="lbl_sbmit_st" />

    </LinearLayout>
</androidx.cardview.widget.CardView>