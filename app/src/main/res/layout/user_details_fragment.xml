<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_40dp"
        android:layout_marginRight="@dimen/margin_5dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="1dp"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:id="@+id/profil_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_pic"
                    android:visibility="visible" />
            </androidx.cardview.widget.CardView>

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:id="@+id/usr_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                android:onClick="onClick"
                android:padding="@dimen/margin_2dp"
                android:text="dvn"
                android:textColor="@color/button_bg"
                android:textSize="@dimen/margin_15dp"
                android:textStyle="bold"
                app:bg_color="0"
                app:bg_type="trans_bg"
                app:text_color="2" />

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:id="@+id/email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3dp"
                android:onClick="onClick"
                android:paddingTop="@dimen/margin_2dp"
                android:text="dvn"
                android:textColor="@color/button_bg"
                android:textSize="12dp"
                app:bg_color="0"
                app:bg_type="trans_bg"
                app:text_color="2" />

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:id="@+id/dsc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3dp"
                android:onClick="onClick"
                android:paddingTop="@dimen/margin_2dp"
                android:text="dvn"
                android:textColor="@color/button_bg"
                android:textSize="12dp"
                app:bg_color="0"
                app:bg_type="trans_bg"
                app:text_color="2" />

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/app_text"
                android:gravity="center"
                android:padding="@dimen/margin_5dp"
                android:text="@string/lbl_assets_details"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                app:bg_color="2"
                app:bg_type="color_bg"
                app:lbl_text="lbl_assets_details"
                app:text_color="1" />
        </LinearLayout>

        <include
            layout="@layout/count_dashboard"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>