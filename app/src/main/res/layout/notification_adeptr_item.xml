<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/prnt_layr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10dp"
    android:background="@drawable/round_border"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.3"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/asst_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_text"
                android:gravity="center_horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/button_bg"
                android:textSize="@dimen/margin_14dp" />

            <ImageView
                android:id="@+id/ast_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:padding="3dp" />

        </LinearLayout>

        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/app_text"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.7"
            android:orientation="vertical">
            <app.com.arresto.arresto_connect.custom_views.My_TextView
                app:lbl_text="lbl_status"
                app:bg_color="2"
                app:bg_type="color_bg"
                app:text_color="1"
                android:id="@+id/status_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_text"
                android:gravity="center_horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="@string/lbl_status"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/button_bg"
                android:textSize="@dimen/margin_14dp" />
            <app.com.arresto.arresto_connect.custom_views.My_TextView
                app:bg_color="0"
                app:bg_type="color_bg"
                app:text_color="2"
                android:id="@+id/msg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/app_text"
                android:textSize="@dimen/margin_14dp" />

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                app:bg_color="0"
                app:bg_type="color_bg"
                app:text_color="2"
                android:id="@+id/time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="right"
                android:textColor="@color/app_text"
                android:visibility="visible"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp">

                <app.com.arresto.arresto_connect.custom_views.My_TextView
                    app:lbl_text="lbl_reject_st"
                    app:bg_color="4"
                    app:bg_type="round_bg"
                    app:text_color="1"
                    android:id="@+id/cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/round_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/lbl_reject_st"
                    android:textColor="@color/app_text"
                    android:textSize="12.5sp" />

                <app.com.arresto.arresto_connect.custom_views.My_TextView
                    app:lbl_text="lbl_aprov_st"
                    app:bg_color="4"
                    app:bg_type="round_bg"
                    app:text_color="1"
                    android:id="@+id/aprov_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_bg"
                    android:gravity="center"
                    android:layout_marginLeft="50dp"
                    android:padding="5dp"
                    android:text="@string/lbl_aprov_st"
                    android:textColor="@color/app_text"
                    android:textSize="12.5sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>