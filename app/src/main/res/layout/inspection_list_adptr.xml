<app.com.arresto.arresto_connect.custom_views.My_LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical"
    app:bg_color="1"
    app:bg_type="color_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/check_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/approved"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/asset_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_toRightOf="@+id/check_img"
            android:scaleType="centerInside"
            android:src="@drawable/noimage" />

        <RelativeLayout
            android:id="@+id/insp_rel_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/asset_img"
            android:background="@color/app_text">

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:id="@+id/text_insplist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/app_background"
                app:bg_color="0"
                app:bg_type="color_bg"
                app:text_color="1" />

            <ImageView
                android:id="@+id/indicator_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:padding="3dp"
                android:rotation="-90"
                android:src="@drawable/icon4" />
        </RelativeLayout>
    </RelativeLayout>

</app.com.arresto.arresto_connect.custom_views.My_LinearLayout>