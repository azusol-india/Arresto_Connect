<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5dp"
    android:gravity="center_vertical"
    android:minHeight="@dimen/margin_40dp"
    android:orientation="horizontal">
    <!--    android:background="@drawable/bg_btm_line"-->

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_3dp"
        android:layout_weight=".3"
        android:background="@drawable/round_bg1"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_5dp"
        android:textColor="@color/app_text"
        android:textSize="@dimen/margin_15dp" />

    <app.com.arresto.arresto_connect.custom_views.My_EditText
        android:id="@+id/qty_edt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_3dp"
        android:layout_weight=".7"
        android:background="@drawable/round_bg1"
        android:gravity="center_vertical"
        android:hint="@string/lbl_qty_st"
        android:inputType="number"
        android:paddingLeft="@dimen/margin_8dp"
        android:singleLine="true"
        android:textColor="@color/app_text"
        android:textSize="@dimen/margin_15dp"
        app:lbl_text="lbl_qty_st" />

    <ImageView
        android:id="@+id/delete_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="@dimen/margin_5dp"
        android:background="@drawable/round_bg"
        android:backgroundTint="@color/red"
        android:padding="7dp"
        android:src="@drawable/delete"
        android:visibility="gone"
        app:tint="@color/white" />
</LinearLayout>