<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_10dp"
        android:orientation="vertical">

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:id="@+id/heading_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/app_text"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:text="@string/lbl_standards"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/app_text"
            app:lbl_text="lbl_standards"
            app:mandatory="true" />

        <Spinner
            android:id="@+id/standrd_spinr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinner_bg"
            android:minHeight="@dimen/margin_35dp"
            android:spinnerMode="dialog" />
        <!--        android:entries="@array/standrds"-->


        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:text="@string/lbl_ec_type_certificate"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/app_text"
            app:lbl_text="lbl_ec_type_certificate"
            app:mandatory="true" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/certificate_edt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_bg_white"
                android:gravity="center_vertical"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/app_text"
                android:textSize="15dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:text="@string/lbl_notified_body_certificate"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/app_text"
            app:lbl_text="lbl_notified_body_certificate"
            app:mandatory="true" />

        <Spinner
            android:id="@+id/notified_body_spinr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinner_bg"
            android:minHeight="@dimen/margin_35dp"
            android:spinnerMode="dialog" />
        <!--        android:entries="@array/notified_bodys"-->

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:text="@string/lbl_notified_body_articale"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/app_text"
            app:lbl_text="lbl_notified_body_articale"
            app:mandatory="true" />

        <Spinner
            android:id="@+id/article_body_spinr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinner_bg"
            android:minHeight="@dimen/margin_35dp"
            android:spinnerMode="dialog" />
        <!--        android:entries="@array/article_bodys"-->

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:text="@string/lbl_status"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/app_text"
            app:lbl_text="lbl_status"
            app:mandatory="true" />

        <Spinner
            android:id="@+id/status_spinr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinner_bg"
            android:entries="@array/status_arr"
            android:minHeight="@dimen/margin_35dp"
            android:spinnerMode="dialog" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <app.com.arresto.arresto_connect.custom_views.MyButton
                android:id="@+id/back_btn"
                style="@style/material_button"
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_10dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="@string/lbl_back"
                app:backgroundTint="@color/button_bg"
                app:cornerRadius="@dimen/margin_5dp"
                app:lbl_text="lbl_back" />

            <app.com.arresto.arresto_connect.custom_views.MyButton
                android:id="@+id/continue_btn"
                style="@style/material_button"
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_10dp"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:text="@string/lbl_cntnue_st"
                app:backgroundTint="@color/button_bg"
                app:cornerRadius="@dimen/margin_5dp"
                app:lbl_text="lbl_cntnue_st" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>