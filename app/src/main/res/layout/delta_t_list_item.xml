<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_10dp"
    android:layout_marginTop="@dimen/margin_5dp"
    android:layout_marginRight="@dimen/margin_10dp"
    android:layout_marginBottom="@dimen/margin_5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/margin_20dp">

    <LinearLayout
        android:id="@+id/similar_subasset_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_10dp">

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/lbl_sub_asset"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/app_text"
            android:textSize="@dimen/textsize"
            app:bg_color="0"
            app:bg_type="color_bg"
            app:lbl_text="lbl_sub_asset1"
            app:text_color="2" />

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:id="@+id/subasset_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_border"
            android:gravity="center_vertical"
            android:minHeight="@dimen/margin_35dp"
            android:padding="5dp"
            android:paddingRight="20dp"
            app:bg_color="2"
            app:bg_type="border_bg"
            app:text_color="2" />


        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/lbl_temperature"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/app_text"
            android:textSize="@dimen/textsize"
            app:bg_color="0"
            app:bg_type="color_bg"
            app:lbl_text="lbl_temperature1"
            app:text_color="2" />

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:id="@+id/temperature_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_border"
            android:gravity="center_vertical"
            android:minHeight="@dimen/margin_35dp"
            android:padding="5dp"
            android:paddingRight="20dp"
            app:bg_color="2"
            app:bg_type="border_bg"
            app:text_color="2" />

        <LinearLayout
            android:id="@+id/temp2_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/lbl_sub_asset2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/app_text"
                android:textSize="@dimen/textsize"
                app:bg_color="0"
                app:bg_type="color_bg"
                app:lbl_text="lbl_sub_asset2"
                app:text_color="2" />

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:id="@+id/subasset2_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_border"
                android:minHeight="@dimen/margin_35dp"
                android:paddingRight="20dp"
                app:bg_color="2"
                app:bg_type="border_bg"
                app:text_color="2" />


            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/lbl_temperature2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/app_text"
                android:textSize="@dimen/textsize"
                app:bg_color="0"
                app:bg_type="color_bg"
                app:lbl_text="lbl_temperature2"
                app:text_color="2" />

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:id="@+id/temperature2_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_border"
                android:minHeight="@dimen/margin_35dp"
                android:paddingRight="20dp"
                app:bg_color="2"
                app:bg_type="border_bg"
                app:text_color="2" />

        </LinearLayout>

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/lbl_delta_t"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/app_text"
            android:textSize="@dimen/textsize"
            app:bg_color="0"
            app:bg_type="color_bg"
            app:lbl_text="lbl_delta_t"
            app:text_color="2" />

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:id="@+id/delta_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_border"
            android:gravity="center_vertical"
            android:minHeight="@dimen/margin_35dp"
            android:padding="5dp"
            android:paddingRight="20dp"
            app:bg_color="2"
            app:bg_type="border_bg"
            app:text_color="2" />

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/lbl_observation"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/app_text"
            android:textSize="@dimen/textsize"
            app:bg_color="0"
            app:bg_type="color_bg"
            app:lbl_text="lbl_observation"
            app:text_color="2" />

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:id="@+id/obser_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_border"
            android:gravity="center_vertical"
            android:minHeight="@dimen/margin_35dp"
            android:padding="5dp"
            android:paddingRight="20dp"
            app:bg_color="2"
            app:bg_type="border_bg"
            app:text_color="2" />


        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/lbl_action_proposed"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/app_text"
            android:textSize="@dimen/textsize"
            app:bg_color="0"
            app:bg_type="color_bg"
            app:lbl_text="lbl_action_proposed"
            app:text_color="2" />

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:id="@+id/excerpt_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_border"
            android:gravity="center_vertical"
            android:minHeight="@dimen/margin_35dp"
            android:padding="5dp"
            app:bg_color="2"
            app:bg_type="border_bg"
            app:text_color="2" />

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/lbl_actn_takn_st"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/app_text"
            android:textSize="@dimen/textsize"
            app:bg_color="0"
            app:bg_type="color_bg"
            app:lbl_text="lbl_actn_takn_st"
            app:text_color="2" />

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:id="@+id/result_tv"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_border"
            android:gravity="center_vertical"
            android:padding="5dp"
            app:bg_color="2"
            app:bg_type="border_bg"
            app:text_color="2" />

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/lbl_remark_st"
            android:textColor="@color/app_text"
            android:textSize="@dimen/margin_14dp"
            android:textStyle="bold"
            app:bg_color="0"
            app:bg_type="color_bg"
            app:lbl_text="lbl_remark_st"
            app:text_color="2" />

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:id="@+id/remark_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_border"
            android:gravity="center_vertical"
            android:inputType="textMultiLine"
            android:minHeight="35dp"
            android:padding="5dp"
            android:textSize="@dimen/textsize"
            app:bg_color="2"
            app:bg_type="border_bg"
            app:text_color="2" />

        <ImageView
            android:id="@+id/delete_btn"
            android:layout_width="@dimen/margin_25dp"
            android:layout_height="@dimen/margin_25dp"
            android:layout_gravity="right"
            android:layout_margin="@dimen/margin_10dp"
            android:layout_marginTop="-3dp"
            android:layout_marginRight="@dimen/margin_3dp"
            android:layout_marginBottom="@dimen/margin_3dp"
            android:padding="@dimen/margin_3dp"
            android:src="@drawable/delete" />
    </LinearLayout>


</androidx.cardview.widget.CardView>