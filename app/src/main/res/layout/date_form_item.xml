<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <app.com.arresto.arresto_connect.custom_views.My_TextView
        android:id="@+id/date_tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:background="@color/app_text"
        android:gravity="center"
        android:textColor="@color/app_background"
        android:textSize="15dp"
        app:bg_color="2"
        app:bg_type="color_bg"
        app:text_color="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                app:lbl_text="lbl_rope_rep_txt"
                android:id="@+id/rope_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/lbl_rope_rep_txt"
                app:bg_color="0"
                app:bg_type="color_bg"
                app:text_color="2" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                app:lbl_text="lbl_ast_log_txt"
                android:id="@+id/aset_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/lbl_ast_log_txt"
                app:bg_color="0"
                app:bg_type="color_bg"
                app:text_color="2" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                app:lbl_text="lbl_cmplt_rep_txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/lbl_cmplt_rep_txt"
                app:bg_color="0"
                app:bg_type="color_bg"
                app:text_color="2" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5dp"
        android:scrollbarSize="1dp">

        <LinearLayout
            android:id="@+id/forms_list"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_3dp"
            android:layout_marginTop="@dimen/margin_3dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal"
            android:paddingRight="@dimen/margin_5dp" />
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_margin="@dimen/margin_5dp"
        android:background="@color/app_text" />
</LinearLayout>