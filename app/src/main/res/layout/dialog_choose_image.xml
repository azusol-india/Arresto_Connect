<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/margin_20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:id="@+id/heading_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_35dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/lbl_add_photo_st"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/button_bg"
                android:textSize="16dp"
                android:textStyle="bold"
                app:lbl_text="lbl_add_photo_st" />

            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="@dimen/margin_30dp"
                android:layout_height="@dimen/margin_30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:padding="9dp"
                android:src="@drawable/cancel"
                app:tint="@color/button_bg" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:orientation="vertical">

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:id="@+id/capture_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_30dp"
                android:layout_marginTop="@dimen/margin_3dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_btm_line"
                android:paddingLeft="@dimen/margin_5dp"
                android:text="@string/lbl_cpture_st"
                android:textColor="@color/app_text"
                android:textSize="@dimen/margin_15dp"
                android:textStyle="bold"
                app:lbl_text="lbl_cpture_st"
                app:bg_color="2"
                app:bg_type="bottom_line_bg"
                app:text_color="2"  />


            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:id="@+id/choose_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_30dp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:background="@drawable/bg_btm_line"
                android:gravity="center_vertical"
                android:text="@string/lbl_choose_photo_st"
                android:paddingLeft="@dimen/margin_5dp"
                android:textStyle="bold"
                android:textColor="@color/app_text"
                android:textSize="@dimen/margin_15dp"
                app:lbl_text="lbl_choose_photo_st"
                app:bg_color="2"
                app:bg_type="bottom_line_bg"
                app:text_color="2"  />

        </LinearLayout>

        <app.com.arresto.arresto_connect.custom_views.MyButton
            android:id="@+id/cancel_btn"
            style="@style/material_button"
            android:layout_width="150dp"
            android:layout_height="@dimen/margin_35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="0dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/lbl_cncl_st"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@color/button_bg"
            app:cornerRadius="@dimen/margin_10dp"
            app:lbl_text="lbl_cncl_st" />
    </LinearLayout>
</androidx.cardview.widget.CardView>