<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/margin_20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <app.com.arresto.arresto_connect.custom_views.My_TextView
                android:id="@+id/heading_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_35dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/lbl_attach_sensor"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/button_bg"
                android:textSize="16dp"
                android:textStyle="bold"
                app:lbl_text="lbl_attach_sensor" />

            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="@dimen/margin_30dp"
                android:layout_height="@dimen/margin_30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:padding="9dp"
                android:src="@drawable/cancel"
                app:tint="@color/button_bg" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:orientation="vertical">

            <app.com.arresto.arresto_connect.custom_views.My_RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:gravity="bottom">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="@dimen/margin_5dp"
                    android:layout_toLeftOf="@+id/scan_asset_btn"
                    android:background="@drawable/bg_btm_line"
                    android:gravity="bottom"
                    android:textColorHint="@color/hint_color">

                    <app.com.arresto.arresto_connect.custom_views.My_EditText
                        android:id="@+id/asset_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_3dp"
                        android:background="@null"
                        android:hint="@string/lbl_uin"
                        android:inputType="text"
                        android:paddingLeft="@dimen/margin_5dp"
                        android:singleLine="true"
                        android:textColor="@color/app_text"
                        android:textSize="@dimen/textsize"
                        app:lbl_text="lbl_uin" />
                </com.google.android.material.textfield.TextInputLayout>

                <app.com.arresto.arresto_connect.custom_views.My_TextView
                    android:id="@+id/scan_asset_btn"
                    android:layout_width="@dimen/size_100"
                    android:layout_height="@dimen/margin_30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/round_bg"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/lbl_scan"
                    android:textColor="@color/white"
                    android:textSize="12.5sp"
                    app:bg_color="2"
                    app:bg_type="round_bg"
                    app:lbl_text="lbl_scan"
                    app:text_color="1" />
            </app.com.arresto.arresto_connect.custom_views.My_RelativeLayout>

            <app.com.arresto.arresto_connect.custom_views.My_RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="@dimen/margin_5dp"
                    android:layout_toLeftOf="@+id/scan_sensor_btn"
                    android:background="@drawable/bg_btm_line"
                    android:gravity="bottom"
                    android:textColorHint="@color/hint_color">

                    <app.com.arresto.arresto_connect.custom_views.My_EditText
                        android:id="@+id/sensor_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_3dp"
                        android:background="@null"
                        android:hint="@string/lbl_sensor_name"
                        android:inputType="text"
                        android:paddingLeft="@dimen/margin_5dp"
                        android:singleLine="true"
                        android:textColor="@color/app_text"
                        android:textSize="@dimen/textsize"
                        app:lbl_text="lbl_sensor_name" />
                </com.google.android.material.textfield.TextInputLayout>

                <app.com.arresto.arresto_connect.custom_views.My_TextView
                    android:id="@+id/scan_sensor_btn"
                    android:layout_width="@dimen/size_100"
                    android:layout_height="@dimen/margin_30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/round_bg"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/lbl_scan"
                    android:textColor="@color/white"
                    android:textSize="12.5sp"
                    app:bg_color="2"
                    app:bg_type="round_bg"
                    app:lbl_text="lbl_scan"
                    app:text_color="1" />
            </app.com.arresto.arresto_connect.custom_views.My_RelativeLayout>

            <app.com.arresto.arresto_connect.custom_views.MyButton
                android:id="@+id/attach_btn"
                style="@style/material_button"
                android:layout_width="236dp"
                android:layout_height="@dimen/margin_35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/lbl_attach_sensor"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@color/button_bg"
                app:cornerRadius="@dimen/margin_10dp"
                app:lbl_text="lbl_attach_sensor" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>