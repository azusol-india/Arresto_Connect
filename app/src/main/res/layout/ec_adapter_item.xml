<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip"
    android:layout_marginTop="10dip"
    android:layout_marginRight="5dip"
    android:layout_marginBottom="5dip"
    android:orientation="vertical">

    <app.com.arresto.arresto_connect.custom_views.My_RelativeLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/border_bg"
        app:bg_color="2"
        app:bg_type="border_stroke">

        <ImageView
            android:id="@+id/ctgry_img"
            android:layout_width="match_parent"
            android:layout_height="115dip"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="2dip"
            android:layout_marginTop="2dip"
            android:layout_marginEnd="2dip"
            android:layout_marginBottom="2dip"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:id="@+id/ctgry_txt"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_below="@id/ctgry_img"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dip"
            android:background="@color/button_bg"
            android:gravity="center"
            android:maxLines="2"
            android:paddingLeft="2dip"
            android:paddingRight="2dip"
            android:textColor="@color/app_text"
            android:textSize="13dip"
            app:bg_color="2"
            app:bg_type="color_bg"
            app:text_color="1" />

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:id="@+id/count_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:textSize="13dip"
            android:visibility="gone"
            app:bg_color="0"
            app:bg_type="color_bg"
            app:text_color="2" />

        <RelativeLayout
            android:id="@+id/lng_clik_view"
            android:layout_width="fill_parent"
            android:layout_height="165.0dip"
            android:background="#00000000"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/check_btn"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_alignParentRight="true"
                android:enabled="false"
                android:layout_margin="5.0dip"
                android:button="@drawable/custom_checkbox"/>
        </RelativeLayout>

