<app.com.arresto.arresto_connect.custom_views.My_RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_background"
    android:orientation="vertical"
    app:bg_color="1"
    app:bg_type="color_bg">

    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/app_background"
        android:gravity="center"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/logo_img"
        android:background="@color/app_text" />

    <RelativeLayout
        android:id="@+id/contnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_img"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp">

        <app.com.arresto.arresto_connect.custom_views.My_EditText
            android:id="@+id/edt_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="20dp"
            android:inputType="number"
            android:maxLength="3"
            android:background="@drawable/bg_btm_line"
            android:hint="0"
            android:padding="15dp"
            android:textColor="@color/button_bg"
            android:textSize="18sp"
            app:bg_color="2"
            app:bg_type="bottom_line_bg"
            app:text_color="2" />
        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="-25dp"
            android:layout_alignBaseline="@+id/edt_dialog"
            android:layout_toRightOf="@+id/edt_dialog"
            android:text="%"
            android:textColor="@color/app_text"
            app:bg_color="0"
            app:bg_type="trans_bg"
            app:text_color="2" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/contnt"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">


        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:id="@+id/cncl_btn"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:text="@string/lbl_cncl_st"
            android:textColor="@color/app_background"
            app:bg_color="2"
            app:bg_type="round_bg"
            app:lbl_text="lbl_cncl_st"
            app:text_color="1" />

        <app.com.arresto.arresto_connect.custom_views.My_TextView
            android:id="@+id/ok_btn"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:text="@string/lbl_ok_st"
            android:textColor="@color/app_background"
            app:bg_color="2"
            app:bg_type="round_bg"
            app:lbl_text="lbl_ok_st"
            app:text_color="1" />
    </LinearLayout>
</app.com.arresto.arresto_connect.custom_views.My_RelativeLayout>