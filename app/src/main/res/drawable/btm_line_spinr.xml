<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item
                android:bottom="1dp"
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape
                    android:shape="rectangle">
                    <stroke
                        android:width="1px"
                        android:color="@color/app_text"/>
                    <solid
                        android:color="#00FFFFFF"/>

                    <padding
                        android:bottom="5dp"
                        android:left="5dp"
                        android:right="5dp"
                        android:top="0dp"/>
                </shape>
            </item>
            <item android:right="6dp" >
                <bitmap  android:gravity="center_vertical|right" android:src="@drawable/dwn_arw1" />

            </item>
        </layer-list>

    </item>

</selector>